{
  "name": "@stellar-rent/backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Backend para StellarRent",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run dist/index.js",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "test": "bun test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test:all": "bun run test:api:all && bun run test:docker:all && bun run test",
    "test:api:all": "bun run test:api:simple && bun run test:api:endpoints && bun run test:api:profile",
    "test:docker:all": "bun run test:docker:validate && bun run test:docker:integration",
    "docker:build": "docker build -t stellarrent-backend .",
    "docker:run": "docker run -p 3000:3000 stellarrent-backend",
    "docker:dev": "docker-compose up",
    "docker:stop": "docker-compose down",
    "test:api:simple": "./tests/api/simple.test.sh",
    "test:api:endpoints": "./tests/api/endpoints.test.sh",
    "test:api:profile": "./tests/api/profile.test.sh",
    "test:docker:integration": "./tests/docker/integration.test.sh",
    "test:docker:validate": "./tests/docker/validate.test.sh",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "dependencies": {
    "@stellar/stellar-sdk": "^11.2.2",
    "@supabase/supabase-js": "^2.39.0",
    "@types/supertest": "^6.0.3",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "supertest": "^7.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "bun-types": "latest",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
